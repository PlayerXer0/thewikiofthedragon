<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_faction_background">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/backgroundImageGreenFaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pantalladelosverdes"
        android:scaleType="fitXY" />

    <!-- Botones para elegir "Personajes" o "Dragones" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true">

        <!-- Botón "Personajes" -->
        <Button
            android:id="@+id/btnGreenCharacters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personajes"
            android:textSize="18sp"
            android:textColor="@color/gold"
            android:background="@drawable/button_background_green"
            android:padding="12dp"
            android:layout_marginEnd="16dp" />

        <!-- Botón "Dragones" -->
        <Button
            android:id="@+id/btnGreenDragons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dragones"
            android:textSize="18sp"
            android:textColor="@color/gold"
            android:background="@drawable/button_background_green"
            android:padding="12dp" />
    </LinearLayout>
</RelativeLayout>
