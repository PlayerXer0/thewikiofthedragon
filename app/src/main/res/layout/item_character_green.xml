<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/green_faction_background"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Imagen del personaje -->
        <ImageView
            android:id="@+id/characterImageViewGreen"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@drawable/border_image_green"
            android:padding="2dp"
            android:src="@drawable/aegon_targaryen" />

        <!-- Nombre del personaje -->
        <TextView
            android:id="@+id/characterNameTextViewGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/green_faction_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Nombre del personaje" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
