<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Color negro para el estado presionado -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#333333"/> <!-- Color gris oscuro para el estado normal -->
        </shape>
    </item>
</selector>
